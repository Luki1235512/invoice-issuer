

<table width="100%" border="1" cellpadding="5" cellspacing="0">
<tr>
<td colspan="2" align="center" style="font-size:18px"><b>Invoice</b></td>
</tr>
<tr>
<td colspan="2">
<table width="100%" cellpadding="5">
<tr>
<td width="33%">
<b>RECEIVER,</b><br />
Name: {{invoice.receiverName}}<br />
St.: {{invoice.receiverStreet}} <br />
ZIP Code.: {{invoice.receiverZIPcode}} <br />
</td>

<td width="33%">
<b>SENDER</b><br />
Name: {{invoice.senderName}}<br />
St.: {{invoice.senderStreet}} <br />
ZIP Code.: {{invoice.senderZIPcode}} <br />
</td>

<td width="33%">
Invoice No.: {{invoice.title}} <br />
Invoice Date: {{invoice.order_date.format('d/m/Y')}} <br />
</td>
</tr>
</table>
<br />
<table width="100%" border="1" cellpadding="5" cellspacing="0">
<tr>
<th align="left">Item Name</th>
<th align="left">Unit Price</th>
<th align="left">Quantity</th>
<th align="left">TAX</th>
<th align="left">Price</th>
</tr>

{% set fullPrice = 0 %}

 {% for item in invoice.items %}
<tr>
<td align="left">{{ item.name }}</td>
<td align="left"> {{item.unitPrice}} </td>
<td align="left"> {{item.quantity}} </td>
<td align="left"> {{item.tax}} </td>

{% set priceWoTax = item.unitPrice * item.quantity %}
{% set priceWTax = priceWoTax - (item.tax / 100 * priceWoTax) %}

<td align="left"> {{ priceWTax }} </td>
{% set fullPrice = fullPrice + priceWTax %}
</tr>
{% endfor %}

<tr>
<td align="right" colspan="4"><b>Full price:  </b></td>
<td align="left">{{ fullPrice }}</td>
</tr>

</table>
