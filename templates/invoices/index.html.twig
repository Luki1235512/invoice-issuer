{% extends "./base.html.twig" %}

{% block body %}
	<div class="w-4/5 m-auto text-center">
		<div class="py-12 border-b border-gray-200">
			<h1 class="text-6xl pt-12 pb-8">
				Invoices ({{ invoices|length }})
			</h1>
		</div>
	</div>


	<a href="/invoices/create" class="border p-4 mx-4 rounded bg-secondary text-white">
		Create New Invoice
	</a>

	<div class="mx-auto py-15 ">
		{% for invoice in invoices %}
			<div class="text-center pt-8 pb-4">
				<h2 class="font-bold text-3xl py-2">
					{{ invoice.title }}
				</h2>
				<p class="text-base text-gray-700 pt-4 pb-10 leading-8 font-light">
					{{ invoice.receiverName }}
				</p>
				<a href="/invoices/{{ invoice.id }}" class="border text-lg py-2 px-4 rounded">
					Details
				</a>
			</div>
		{% endfor %}
	</div>
{% endblock %}
